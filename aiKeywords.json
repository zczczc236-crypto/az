// generate_ai.js
const fs = require("fs");

const patterns = [
  ["안녕","하이","안녕하세요"], 
  ["힘들","우울","슬픔"], 
  ["스트레스","짜증","신경"], 
  ["배고파","먹고싶어","허기"], 
  ["졸려","피곤","피로"],
  ["공부","집중","학습"],
  ["운동","체력","헬스"],
  ["잠","불면","깊은잠"],
  ["기분","행복","좋아요"],
  ["걱정","불안","초조"],
  ["목마름","갈증"]
];

const responses = [
  ["지금 느끼는 기분을 조금 더 말해봐요 😊","그럴 땐 천천히 숨을 쉬어보세요."],
  ["잠시 눈을 감고 휴식을 취하는 걸 추천해요.","괜찮아요. 힘든 날도 있으니까요."],
  ["짧은 산책이나 물 한 잔이 도움 될 수 있어요.","스트레칭으로 긴장을 풀어보세요 💪"],
  ["건강을 위해 물을 충분히 마시고 가벼운 운동을 해보세요.","시간이 있다면 5분 명상도 좋아요 🧘"],
  ["좋아하는 노래를 들어 기분 전환 해보세요!","밝은 생각을 떠올리면 도움이 돼요 🌈"]
];

let aiData = [];
for (let i=0; aiData.length<2000; i++) {
  const p = patterns[i % patterns.length];
  const r = responses[i % responses.length];
  aiData.push({k: p, r});
}

fs.writeFileSync("aiKeywords.json", JSON.stringify(aiData, null, 2), "utf-8");
console.log("aiKeywords.json 생성 완료 (2000개)");

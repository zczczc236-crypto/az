// generate_foods.js
const fs = require("fs");

const categories = ["단백질","과일","채소","간식","보충제","견과류"];
const baseFoods = [
  "닭가슴살","계란","연어","두부","아몬드","호두","바나나",
  "사과","오렌지","브로콜리","시금치","고구마","오트밀",
  "요거트","치즈","콩","연근","귀리","블랙베리","망고",
  "파프리카","토마토","포도","레몬","오이","감자","버섯","양파","샐러리"
];

let foods = [];
for (let i=0; foods.length<5000; i++) {
  const base = baseFoods[i % baseFoods.length];
  const cat = categories[i % categories.length];
  foods.push({name: `${base} ${Math.floor(i/baseFoods.length)+1}`, cat});
}

fs.writeFileSync("foods.json", JSON.stringify(foods, null, 2), "utf-8");
console.log("foods.json 생성 완료 (5000개)");

